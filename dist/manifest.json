{
    
      "manifest_version": 2,
      "name": "Steamcommunity Enhanced",
      "version": "0.0.1",
    
      "description": "Enhances the Steamcommunity",
    
      "content_scripts": [
        {
          "matches": ["*://*.steamcommunity.com/discussions/*"],
          "js": ["js/discussions/index.js",
          "js/settings/index.js"]
        },
        {
            "matches": [
          "*://steamcommunity.com/id/*/home/"],
            "js": ["js/activityfeed/index.js",
              "js/settings/index.js"]
        }
      ]
    
    }